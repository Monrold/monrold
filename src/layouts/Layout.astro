---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import "@fontsource/rubik/300.css";
import "@fontsource/rubik/400.css";
import "@fontsource/rubik/500.css";
import "@fontsource/rubik/600.css";
import "@fontsource/rubik/700.css";
import "@fontsource/rubik/800.css";
import "@fontsource/rubik/900.css";

interface Props {
	title: string;
	description: string;
	children?: any;
}

const { title, description, children } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta
			property="og:image"
			content="https://pub-c6f56a3478ba4de7a25f81a088d063ba.r2.dev/og-image-monrold.webp"
		/>
		<title>{title}</title>
	</head>
	<body class="text-gray-200">
		<Nav />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	html {
		background: black;
	}
	body {
		font-family: "Rubik", sans-serif;
	}

	

	#article-content p {
		margin: 10px 0; /* Margen vertical de 10px */
		padding: 0;
		line-height: 1.6;
		font-size: 1rem; /* Tama침o de fuente base */
		color: #6b7280; /* Color de texto gris */
	}

	#article-content h1 {
		margin: 20px 0 10px 0; /* Margen superior e inferior */
		padding: 0;
		font-size: 2.5rem; /* Tama침o de fuente grande */
		font-weight: 400; /* Negrita */
		color: #b0b5bc; /* Color de texto gris claro */
		line-height: 1.2;
	}

	#article-content h2 {
		margin: 20px 0 10px 0;
		padding: 0;
		font-size: 2rem;
		font-weight: 400; /* Semibold */
		color: #b0b5bc;
		line-height: 1.3;
	}

	#article-content h3 {
		margin: 15px 0 10px 0;
		padding: 0;
		font-size: 1.75rem;
		font-weight: 400;
		color: #b0b5bc;
		line-height: 1.4;
	}

	#article-content h4 {
		margin: 15px 0 10px 0;
		padding: 0;
		font-size: 1.5rem;
		font-weight: 400;
		color: #b0b5bc;
		line-height: 1.4;
	}

	#article-content h5 {
		margin: 10px 0;
		padding: 0;
		font-size: 1.25rem;
		font-weight: 400;
		color: #b0b5bc;
		line-height: 1.5;
	}

	#article-content h6 {
		margin: 10px 0;
		padding: 0;
		font-size: 1rem;
		font-weight: 400;
		color: #b0b5bc;
		line-height: 1.5;
	}

	#article-content blockquote {
		margin: 20px 0;
		padding: 10px 20px;
		border-left: 4px solid #4b5563; /* Borde izquierdo */
		font-style: italic;
		color: #9ca3af; /* Color de texto gris medio */
	}

	#article-content ul,
	#article-content ol {
		margin: 10px 0;
		padding-left: 20px;
	}

	#article-content li {
		margin-bottom: 5px;
	}


	#article-content a {
		color: #60a5fa; /* Color de enlace azul claro */
		text-decoration: underline;
	}

	#article-content a:hover {
		color: #3b82f6; /* Color de enlace azul m치s oscuro al pasar el rat칩n */
	}
</style>
